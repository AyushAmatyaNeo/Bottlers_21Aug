<?php


$form->setAttribute('role', 'form');
$form->setAttribute('class', 'login-form');

$name = $form->get("name");
$name->setAttribute('id', 'form-name');
$name->setAttribute('class', 'form-name form-control');
$name->setAttribute('placeholder', 'Name...');
$name->setAttribute('required', false);

$address = $form->get('address');
$address->setAttribute('id', 'form-address');
$address->setAttribute('class', 'form-address form-control');
$address->setAttribute('placeholder', 'Address...');
$address->setAttribute('required', false);



$submit = $form->get('submit');
$submit->setAttribute('class', 'btn');

$form->setAttribute('action', $this->url('auth/process', ['action' => 'authenticate']));
$form->prepare();

print $this->form()->openTag($form);


if ($this->messages) {
    print '<ul class="help-block bg-danger" style="background:#f3e250;">';
    foreach ($this->messages as $message) {
        print '<li>' . $message . '</li>';
    }
    print '</ul>';
}
?>

<div class="form-group">
    <?php print $this->formLabel($name) ?>
    <?php print $this->formElement($name) ?>
    <?php print $this->formElementErrors()->render($name, ['class' => 'help-block']) ?>
</div>

<div class="form-group">
    <?php print $this->formLabel($address) ?>
    <?php print $this->formElement($address) ?>
    <?php print $this->formElementErrors()->render($address, ['class' => 'help-block']) ?>
</div>



<?php
print $this->formSubmit($submit);
print $this->form()->closeTag();

